rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Esta regla permite que cualquier persona con el ID de tu proyecto
    // pueda leer y escribir datos. ¡Solo úsalo durante el desarrollo!
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 3, 18);
    }
  }
}